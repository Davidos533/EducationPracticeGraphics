        <Label x:Name="currentSelectedElement" Content="" HorizontalAlignment="Left" Margin="117,16,0,0" VerticalAlignment="Top" Width="343"/>
        <Label Content="file data" HorizontalAlignment="Left" Margin="59,428,0,0" VerticalAlignment="Top" Height="27" Width="141"/>
        <ScrollViewer Margin="60,442,786,10" BorderBrush="Black">
            <StackPanel x:Name="fileDataPanel">
                <Label x:Name="fileData" />
            </StackPanel>
        </ScrollViewer>
        <Label Content="status:" HorizontalAlignment="Left" Margin="39,47,0,0" VerticalAlignment="Top"/>
        <Label x:Name="statusCode" Content="" HorizontalAlignment="Left" Margin="94,47,0,0" VerticalAlignment="Top" Width="262"/>

    </Grid>
</Window>
