        <Label Content="file name" HorizontalAlignment="Left" Margin="156,197,0,0" VerticalAlignment="Top" FontFamily="Consolas"/>
        <Label Content="file data" HorizontalAlignment="Left" Margin="156,141,0,0" VerticalAlignment="Top" FontFamily="Consolas"/>
