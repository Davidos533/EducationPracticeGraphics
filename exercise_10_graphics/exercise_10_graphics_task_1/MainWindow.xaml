        <Label Content="editable file name" HorizontalAlignment="Left" Margin="296,339,0,0" VerticalAlignment="Top" FontFamily="Consolas" Height="25" Width="141"/>
        <TextBox x:Name="textBoxConcatanateEditableFileName" HorizontalAlignment="Left" Margin="156,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" FontFamily="Consolas" Height="31"/>
        <TextBox x:Name="textBoxConcatanateAppendableFileName" HorizontalAlignment="Left" Margin="156,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" FontFamily="Consolas" Height="31"/>
